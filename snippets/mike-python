	import argparse, sys

	# Get command line arguments
	parser = argparse.ArgumentParser(description="""\

	# Optional Arguments

	# Required Files

	# Optional Files
	parser.add_argument('logfile', nargs='?', type=argparse.FileType('a'),
	                    default=sys.stderr, help="Log File, Default STDERR (append mode)")
	parser.add_argument('infile', nargs='?', type=argparse.FileType('w'),
	                     default=sys.stdout, help="Output file, Default STDOUT")
	parser.add_argument('outfile', nargs='?', type=argparse.FileType('r'),
	                     default=sys.stdin, help="Output file, Default STDIN")
	 
	args = parser.parse_args()
	  
 
